<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MovieManagement.Views.ContentDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBox Header="Enter Movie Title:"/>
        <DropDownButton Content="Genre">
            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="Fiction"/>
                    <MenuFlyoutItem Text="Romantic"/>
                    <MenuFlyoutItem Text="Documentary"/>
                </MenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>
        <TextBox Header="Enter Duration:"/>
        <TextBox Header="Enter Published Year:"/>
        <TextBox Header="Enter iMDB Score:"/>
        <DropDownButton Content="Age Certification">
            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="R-13"/>
                    <MenuFlyoutItem Text="P"/>
                    <MenuFlyoutItem Text="PG"/>
                </MenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>
    </StackPanel>

</Page>
